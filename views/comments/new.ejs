<% include ../partials/header%>
<div class='container'>
    <h1 style='text-align:center'>Add New Comments To <%= campground.name %></h1>
    <div style='width:30%; margin: 26px auto'>
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class='form-group'>
                <input class='form-control' type="text" name="comment[text]" placeholder="text">
            </div>
            <div class='form-group'>
                <input class='btn btn-lg btn-default btn-block btn-primary' type="submit">
            </div>
        </form>
        <a href='/campgrounds'>Go Back</a>
    </div><!--This needs to be its own style sheet-->
</div><!--container-->

<% include ../partials/footer %>