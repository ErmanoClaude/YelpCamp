<% include ../partials/header %>

<div class="container">   
    <header class="jumbotron">
        <div class='container'>
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all ove the world</p>
            <a class='btn btn-primary btn-lg' href='/campgrounds/new'>Add New Campgrounds</a>
        </div>
    </header>
    
    
    <div class='row'>
        <% campgrounds.forEach(function(camp){ %>
            <div class='col-md-3 col-sm-6'>
                <div class="thumbnail text-center">
                    <img src="<%=camp['image']%>" width='100%' height='auto'>
                    <div class='caption'>
                        <h4><%= camp['name'] %></h4>
                        <p>
                            <a href="/campgrounds/<%=camp._id%>" class= "btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>    
            </div>
        <% }); %>
    </div>
</div> <!-- div container-->

<% include ../partials/footer %>